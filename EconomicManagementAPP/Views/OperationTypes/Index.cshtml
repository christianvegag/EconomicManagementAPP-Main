@model IEnumerable<OperationType>

@{
    ViewData["Title"] = "Operation Types";
}

<h1>Account Types List</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var operationType in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@operationType.Id" class="ids" />
                    <a class="btn btn-primary" asp-action="Modify" asp-route-id="@operationType.Id">Modify</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@operationType.Id">Delete</a>
                </td>
                <td>
                    @operationType.Description
                </td>

            </tr>
        }
    </tbody>
</table>
