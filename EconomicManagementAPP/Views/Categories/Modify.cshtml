@model Category

@{
    ViewData["Title"] = "Modify Category";
}

<h1>Modify Category</h1>
<h5>
    The category allows us to indicate what we spend our money on,
     also, where our income comes from.
</h5>


<form asp-action="Modify">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OperationTypeId" class="form-label"></label>
        <select asp-for="OperationTypeId" asp-items="Html.GetEnumSelectList<OperationType>()"
                class="form-select"></select>
        <span asp-validation-for="OperationTypeId" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Modify</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>

</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}