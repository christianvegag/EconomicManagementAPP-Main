@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<a class="btn btn-success" asp-action="Create">
     <i class="bi bi-plus-circle-fill"></i><span>New Category</span></a>
<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Name</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@category.Id" class="ids" />
                    <a class="btn btn-primary" asp-action="Modify" asp-route-id="@category.Id">Modify</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                </td>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.OperationType
                </td>
            </tr>
        }
    </tbody>
</table>