@model RegisterViewModel

@{
    ViewData["Title"] = "Sign-Up";
}

<div class="card-header text-center">
      <h1><b>SignUp</b></h1>
 </div>

<div class="card-body">
      <p class="login-box-msg">SignUp to start your session</p>

      <form asp-action="Register">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="input-group mb-3">
          <input asp-for="Email" type="email" class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
               <span asp-validation-for="Email" class="text-danger"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="Password" type="password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <!-- /.social-auth-links -->

      <p class="mb-0">
        <a asp-action="Login" class="text-center">I already have a membership</a>
      </p>
    </div>

@section Scripts{
    <partil name="_ValidationsScriptsPartil" />
}